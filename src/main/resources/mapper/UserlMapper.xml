<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tml.mouseDemo.data.data2.mapper.UserMapper">


    <resultMap id="BaseResultMap" type="com.tml.mouseDemo.model.User">
        <!--
          id标签只能修饰主键字段，result标签修饰其他字段
          column 数据库中的字段名称
          property 映射对象的属性名称
          jdbcType 对应的类型
        -->
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="user_name" jdbcType="VARCHAR" property="userName"/>
        <result column="password" jdbcType="VARCHAR" property="password"/>
    </resultMap>


    <select id="listByName" resultMap="BaseResultMap">
        SELECT *
        FROM `user` t
        WHERE t.`user_name` = #{userName}
    </select>

    <update id="updatePwd">
        UPDATE `user`
        SET PASSWORD=#{pwd}
        WHERE id = #{uid}
    </update>
</mapper>
