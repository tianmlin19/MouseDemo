<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tml.mouseDemo.data.data1.mapper.InvestDetailMapper">


    <resultMap id="BaseResultMap" type="com.tml.mouseDemo.model.InvestDetail">
        <!--
          id标签只能修饰主键字段，result标签修饰其他字段
          column 数据库中的字段名称
          property 映射对象的属性名称
          jdbcType 对应的类型
        -->
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="user_name" jdbcType="VARCHAR" property="userName"/>
        <result column="stock_name" jdbcType="VARCHAR" property="stockName"/>
        <result column="stock_price" jdbcType="DOUBLE" property="stockPrice"/>
        <result column="stock_num" jdbcType="DOUBLE" property="stockNum"/>
        <result column="tax" jdbcType="DOUBLE" property="tax"/>
        <result column="purchase_flag" jdbcType="INTEGER" property="purchaseFlag"/>
        <result column="purchase_date" jdbcType="DATE" property="purchaseDate"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
    </resultMap>


    <select id="listInvestByStockName" resultMap="BaseResultMap">
        SELECT *
        FROM `t_invest_detail` t
        WHERE t.`stock_name` = #{stockName}
    </select>

    <update id="updateTax">
        UPDATE t_invest_detail
        SET tax=#{tax},
            purchase_date=NOW()
        WHERE id = #{investId};
    </update>

    <select id="getOneRecord" resultMap="BaseResultMap">
        SELECT *
        FROM `t_invest_detail` t
        WHERE t.`id` = #{investId}
    </select>
</mapper>
